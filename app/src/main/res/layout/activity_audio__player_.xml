<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_purple"
        android:gravity="center_vertical"
        android:id="@+id/rv_toolbar"
        android:layout_height="55dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_cross"
            android:padding="5dp"
            android:src="@drawable/back_press"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/iv_cross"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:id="@+id/tv_app_name"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="95dp"
        android:src="@drawable/app_logo"
        android:scaleType="centerInside"
        android:tint="@color/black"
        android:id="@+id/iv_current_fav"
        android:layout_below="@+id/rv_toolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@drawable/gradient_purple"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl_play"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/iv_play"
                android:src="@drawable/ic_play_arrow_black_24dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_play"
                android:id="@+id/iv_pause"
                android:visibility="visible"
                android:src="@drawable/ic_pause_black_24dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_current_audio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="name"
            android:layout_below="@+id/rl_play"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_current_audio_times"
            android:text="10:10"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/rl_play"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>